<h3> Create a New Recipe </h3>
<%= form_for @recipe do |f| %>
<strong><%= f.label "Title of Recipe" %></strong>
<%= f.text_field :title %>
<br>
<br>
<%= f.fields_for :ingredients do |ff| %>
<%= ff.label "Name of ingredient: " %>
<%= ff.text_field :name %>
<br>
<br>
<%= ff.label "Quantity: " %>
<%= ff.text_field :quantity %>
<br>
<br>
<% end %>
<br>
<br>
<%= f.submit %>
<% end %>
